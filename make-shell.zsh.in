#!@ZSH@

set -o nomatch
set -o pipefail

local status() {
  echo -e "$@"
}

local pre_hook() {
  status "CASILEPRE$target"
}

local post_hook() {
  status "CASILEPOST$2$target"
}

local report_stdout() {
  while read line; do
    echo -e "CASILESTDOUT$target$line"
  done
}

local report_stderr() {
  while read line; do
    echo -e "CASILESTDERR$target$line" >&2
  done
}

local process_recipe() {
  pre_hook $target
  {
    (
      set -e
      set -o nobadpattern
      [[ ! -v _debug ]] || set -x
      exec > >(report_stdout) 2> >(report_stderr)
      eval "$@"
    )
  } always {
    post_hook $target $?
  }
}

local process_shell() {
  (
    set -e
    set -o nobadpattern
    [[ ! -v _debug ]] || set -x
    eval "$@"
  )
}

while true; do
  case $1 in
    '-x')
      _debug=true
      shift
      ;;
    'target='*)
      eval $1
      shift
      ;;
    *)
      break
      ;;
  esac
done

if [[ -v target && -v MAKELEVEL ]]; then
  process_recipe $@
else
  process_shell $@
fi
